[
  {
    "agent": "optimization_lister",
    "content": "List all available optimization patterns using the optimization:list_patterns tool.",
    "tools": ["optimization:list_patterns"],
    "output_format": {
      "type": "json",
      "schema": {
        "status": "string",
        "patterns": "object"
      }
    }
  },
  {
    "agent": "optimization_session_creator",
    "content": "Create a new optimization session using the 'multi_objective' pattern. Be sure to explicitly pass pattern_id as the parameter name.",
    "readFrom": ["optimization_lister"],
    "tools": ["optimization:create_session"],
    "output_format": {
      "type": "json",
      "schema": {
        "status": "string",
        "session_id": "string",
        "pattern": "string",
        "description": "string",
        "stages": ["string"]
      }
    }
  },
  {
    "agent": "optimization_status_checker",
    "content": "Check the status of the created optimization session. Use the session_id from the previous step.",
    "readFrom": ["optimization_session_creator"],
    "tools": ["optimization:get_status"],
    "output_format": {
      "type": "json",
      "schema": {
        "session_id": "string",
        "pattern": "string",
        "status": "string",
        "current_stage": "number",
        "stages": ["string"],
        "created_at": "number",
        "results_available": ["string"]
      }
    }
  },
  {
    "agent": "diagnostic_summary",
    "content": "Generate a comprehensive report on the optimization tool testing results.",
    "readFrom": ["*"],
    "output_format": {
      "type": "markdown",
      "sections": [
        "Diagnostic Summary",
        "Tool Testing Results",
        "Parameter Issues Identified",
        "Recommendations"
      ]
    }
  }
]
